---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  translatedSlug?: string;
}

const {
  title = "Hải Phạm | Backend Engineer",
  description = "Personal blog of Hai Pham - Backend Engineer specializing in Java, Spring Boot, and Distributed Systems.",
  lang = "vi",
  translatedSlug,
} = Astro.props;
---

<!doctype html>
<html
  lang={lang}
  data-translated-slug={translatedSlug}
  data-current-lang={lang}
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Cache Control & Service Worker Cleanup -->
    <meta
      http-equiv="Cache-Control"
      content="no-cache, no-store, must-revalidate"
    />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <script is:inline>
      // Automatically unregister any Service Worker to prevent "Ghost" Service Workers from other projects
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.getRegistrations().then((registrations) => {
          for (let registration of registrations) {
            registration.unregister().then((success) => {
              if (success) console.log("[Cache] Service Worker unregistered");
            });
          }
        });
      }
    </script>

    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
