---
interface Props {
  title: string;
  date: string;
  tags: string[];
  excerpt: string;
  href: string;
  lang: string;
  series?: string;
  seriesOrder?: number;
}

const {
  title,
  date,
  tags,
  excerpt,
  href,
  lang = "vi",
  series,
  seriesOrder,
} = Astro.props;

const localizedHref = `/${lang}${href}`;
---

<article class="card post-card scroll-animate">
  <a href={localizedHref} class="card-link">
    <h3>{title}</h3>
    <div class="meta">
      <span>ðŸ“… {date}</span>
      {
        series && (
          <span class="series-badge">
            ðŸ“š {series} #{seriesOrder}
          </span>
        )
      }
    </div>
    <p class="excerpt">{excerpt}</p>
    <div class="tags">
      {tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
  </a>
</article>
