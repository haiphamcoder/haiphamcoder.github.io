    text-decoration: none;
    transition: color 0.2s;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .contact-item a:hover {
    color: var(--brand);
  }

  .skill-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .skill-group h4 {
    font-size: 0.95rem;
    margin: 0 0 0.5rem;
    color: var(--text);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    color: var(--muted);
  }

  /* Main Content */
  .cv-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 2rem;
  }

  .cv-header h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem;
    color: var(--text);
  }

  .cv-title {
    font-size: 1.25rem;
    color: var(--brand);
    font-weight: 500;
    margin: 0 0 1rem;
  }

  .cv-summary {
    color: var(--muted);
    line-height: 1.7;
    max-width: 800px;
