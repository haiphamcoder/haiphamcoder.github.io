  }

  .cv-item-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.5rem;
  }

  .cv-item h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--text);
  }

  .date {
