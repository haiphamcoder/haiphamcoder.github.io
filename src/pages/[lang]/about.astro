<style>
  .cv-container {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  .cv-layout {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Sidebar */
  .cv-sidebar {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    position: sticky;
    top: 100px;
  }

  .cv-avatar {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
    border: 3px solid var(--border);
    object-fit: cover;
  }

  .cv-contact {
    margin-bottom: 2rem;
    text-align: left;
  }

  .cv-contact h3,
  .cv-skills h3 {
    font-size: 1.1rem;
    color: var(--text);
    border-bottom: 2px solid var(--border);
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    color: var(--muted);
  }

  .contact-item a {
    color: var(--muted);
    text-decoration: none;
    transition: color 0.2s;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .contact-item a:hover {
    color: var(--brand);
  }

  .skill-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }

  .skill-group h4 {
    font-size: 0.95rem;
    margin: 0 0 0.5rem;
    color: var(--text);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.8rem;
    padding: 0.2rem 0.6rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 4px;
    color: var(--muted);
  }

  /* Main Content */
  .cv-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 2rem;
  }

  .cv-header h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem;
    color: var(--text);
  }

  .cv-title {
    font-size: 1.25rem;
    color: var(--brand);
    font-weight: 500;
    margin: 0 0 1rem;
  }

  .cv-summary {
    color: var(--muted);
    line-height: 1.7;
    max-width: 800px;
  }

  .cv-section {
    margin-bottom: 3rem;
  }

  .cv-section h2 {
    font-size: 1.5rem;
    color: var(--text);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .cv-item {
    margin-bottom: 2rem;
  }

  .cv-item-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.5rem;
  }

  .cv-item h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--text);
  }

  .date {
    font-family: monospace;
    color: var(--muted);
    font-size: 0.9rem;
  }

  .sub-title {
    color: var(--text);
    font-weight: 500;
    margin: 0;
  }

  .role {
    color: var(--muted);
    margin: 0.2rem 0 0;
    font-style: italic;
  }

  .tech-stack {
    display: flex;
    gap: 0.5rem;
    margin: 0.5rem 0;
  }

  .tech {
    font-size: 0.8rem;
    color: var(--brand);
    background: var(--brand-light);
    padding: 0.1rem 0.5rem;
    border-radius: 4px;
  }
  /* Dark mode adjustment for brand-light if needed, generally brand-light might be too bright in dark mode */
  :global(html[data-theme="dark"]) .tech {
    background: rgba(33, 150, 243, 0.2);
  }

  .project-link {
    font-size: 0.9rem;
    display: inline-block;
    margin-top: 0.5rem;
  }

  .goals-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .goal-group h4 {
    color: var(--text);
    margin-top: 0;
  }

  .goal-group ul {
    padding-left: 1.2rem;
    color: var(--muted);
  }

  .goal-group li {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .cv-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .cv-sidebar {
      position: static;
      text-align: left;
      display: grid;
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .cv-avatar-wrapper {
      text-align: center;
    }

    .goals-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
