---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import TableOfContents from "../../../components/TableOfContents.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => {
    // Determine the lang from the post data
    const lang = post.data.lang;
    // Slug should be the same as in content collection, or we can strip .en if we want
    // But for now let's keep it simple: the slug is what it is in the file.
    return {
      params: { lang, slug: post.slug },
      props: { post, allPosts: posts },
    };
  });
}

const { post, allPosts } = Astro.props;
const { lang } = Astro.params;

// Translation logic
// Find if there is a post with the same "base" slug but different language
// Note: This needs a way to link posts. For now, let's assume same title or metadata.
// Or we can use the existing logic if we strip .en
const baseSlug = post.slug.replace(/\.en$/, "");
const targetLang = lang === "vi" ? "en" : "vi";
const translatedPost = allPosts.find(
  (p) =>
    p.data.lang === targetLang &&
    (p.slug === baseSlug || p.slug === `${baseSlug}.en`),
);
const translatedSlug = translatedPost ? translatedPost.slug : undefined;

const { Content, headings } = await post.render();

// Series Logic
let seriesPosts: any[] = [];
let prevPost = null;
let nextPost = null;

if (post.data.series) {
  const allPosts = await getCollection("blog");
  seriesPosts = allPosts
    .filter(
      (p) =>
        p.data.series === post.data.series && p.data.lang === post.data.lang,
    )
    .sort((a, b) => (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0));

  const currentIndex = seriesPosts.findIndex((p) => p.slug === post.slug);
  if (currentIndex > 0) prevPost = seriesPosts[currentIndex - 1];
  if (currentIndex < seriesPosts.length - 1)
    nextPost = seriesPosts[currentIndex + 1];
}
---

<Layout
  title={post.data.title}
  description={post.data.excerpt}
  lang={post.data.lang}
  translatedSlug={translatedSlug}
>
  <div class="layout">
    <div class="main-content">
      <article class="content markdown-body">
        <div class="post-header">
          <h1>{post.data.title}</h1>
          <div class="meta">
            <span>üìÖ {post.data.date.toISOString().split("T")[0]}</span>
            <span>üè∑Ô∏è {post.data.tags.join(", ")}</span>
          </div>
        </div>
        <div id="post-content">
          <Content />
        </div>
      </article>

      {
        post.data.series && (
          <div class="series-nav">
            <hr />
            <h3>Series: {post.data.series}</h3>

            <div class="series-content">
              <ul class="series-list">
                {seriesPosts.map((p) => (
                  <li class={p.slug === post.slug ? "active" : ""}>
                    <a href={`/blog/${p.slug}`}>
                      <span class="order">{p.data.seriesOrder}.</span>
                      <span class="title">{p.data.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>

            <div class="series-links">
              {prevPost && (
                <a href={`/blog/${prevPost.slug}`} class="series-link prev">
                  <span>‚Üê B√†i tr∆∞·ªõc</span>
                  <span class="link-title">{prevPost.data.title}</span>
                </a>
              )}
              {nextPost && (
                <a href={`/blog/${nextPost.slug}`} class="series-link next">
                  <span>B√†i ti·∫øp theo ‚Üí</span>
                  <span class="link-title">{nextPost.data.title}</span>
                </a>
              )}
            </div>
          </div>
        )
      }
    </div>

    <aside class="sidebar">
      <TableOfContents headings={headings} />
    </aside>
  </div>
</Layout>
<div id="mermaid-modal" class="mermaid-modal">
  <div class="mermaid-modal-content">
    <span class="close-modal">&times;</span>
    <div id="mermaid-modal-body"></div>
  </div>
</div>

<!-- Mermaid & Callouts Scripts -->
<script
  is:inline
  src="https://cdn.jsdelivr.net/npm/mermaid@11.4.0/dist/mermaid.min.js"
></script>
<script is:inline>
  // Mermaid Configuration
  mermaid.initialize({
    startOnLoad: false,
    theme: "default",
    securityLevel: "loose",
    htmlLabels: true,
    flowchart: { useMaxWidth: true, htmlLabels: true },
    sequence: { useMaxWidth: true },
    gantt: { useMaxWidth: true },
  });

  // Find all code blocks with language-mermaid
  const mermaidBlocks = document.querySelectorAll(
    'pre.mermaid, pre > code.language-mermaid, pre[data-language="mermaid"]',
  );

  if (mermaidBlocks.length > 0) {
    console.log(`[Mermaid] Found ${mermaidBlocks.length} blocks`);
    mermaidBlocks.forEach((block, index) => {
      const pre = block.tagName === "CODE" ? block.parentElement : block;
      if (!pre) return;

      const code = pre.textContent || "";
      const wrapper = document.createElement("div");
      wrapper.className = "mermaid-wrapper";
      const div = document.createElement("div");
      div.className = "mermaid";
      div.id = `mermaid-${index}`;
      div.textContent = code;

      const expandBtn = document.createElement("button");
      expandBtn.className = "mermaid-expand-btn";
      expandBtn.innerHTML = "‚§¢";
      expandBtn.title = "Expand Diagram";
      expandBtn.onclick = () => openMermaidModal(`mermaid-${index}`);

      wrapper.appendChild(expandBtn);
      wrapper.appendChild(div);
      pre.replaceWith(wrapper);
    });

    // Run mermaid
    mermaid.run({
      nodes: document.querySelectorAll(".mermaid"),
    });
  }

  // Mermaid Modal Logic
  const modal = document.getElementById("mermaid-modal");
  const modalBody = document.getElementById("mermaid-modal-body");
  const closeBtn = document.querySelector(".close-modal");

  function openMermaidModal(id) {
    if (!modal || !modalBody) return;
    const original = document.getElementById(id);
    if (!original) return;

    modalBody.innerHTML = original.innerHTML;

    // JS scaling is handled by CSS now (.mermaid-modal-content svg)
    // But we remove explicit height/width attributes that might block CSS
    const svg = modalBody.querySelector("svg");
    if (svg) {
      svg.removeAttribute("height");
      svg.removeAttribute("width");
      svg.removeAttribute("style"); // Clear inline styles from mermaid
    }

    modal.style.display = "flex";
  }

  if (closeBtn) {
    closeBtn.addEventListener("click", () => {
      if (modal) modal.style.display = "none";
    });
  }

  if (modal) {
    modal.addEventListener("click", (e) => {
      if (e.target === modal) modal.style.display = "none";
    });
  }

  // Callouts (Transform GitHub Alerts to style)
  // ... existing callout logic ...
  const blockquotes = document.querySelectorAll("blockquote");
  // ... keep callout logic ...
  blockquotes.forEach((bq) => {
    const firstP = bq.querySelector("p");
    if (!firstP) return;
    const text = firstP.innerHTML;
    const match = text.match(/^\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]/);
    if (match) {
      const type = match[1].toLowerCase();
      bq.classList.add("callout", type);
      // Remove the [!NOTE] part from text
      firstP.innerHTML = text.replace(
        /^\[!(NOTE|TIP|IMPORTANT|WARNING|CAUTION)\]\s?/,
        "",
      );
      // Add title
      const title = document.createElement("div");
      title.className = "callout-title";
      title.textContent = type.charAt(0).toUpperCase() + type.slice(1);
      bq.prepend(title);
    }
  });

  // Copy Code Button
  document.querySelectorAll("pre").forEach((pre) => {
    // Check if it's inside a mermaid wrapper (don't add copy there)
    if (pre.closest(".mermaid-wrapper")) return;
    // ...
    // Check if it's inside a mermaid block (don't add copy there)
    if (pre.classList.contains("mermaid")) return;

    const wrapper = document.createElement("div");
    wrapper.className = "code-wrapper";
    pre.parentNode?.insertBefore(wrapper, pre);
    wrapper.appendChild(pre);

    const button = document.createElement("button");
    button.className = "copy-btn";
    button.textContent = "Copy";
    button.addEventListener("click", async () => {
      const code =
        pre.querySelector("code")?.textContent || pre.textContent || "";
      try {
        await navigator.clipboard.writeText(code);
        button.textContent = "Copied!";
        setTimeout(() => (button.textContent = "Copy"), 2000);
      } catch (err) {
        console.error("Failed to copy class", err);
        button.textContent = "Error";
      }
    });
    wrapper.appendChild(button);
  });
</script>

