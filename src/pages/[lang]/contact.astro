---
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return [{ params: { lang: "vi" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const title = lang === "vi" ? "Liên hệ | Hải Phạm" : "Contact | Hải Phạm";
---

<Layout title={title} lang={lang}>
  <div class="container narrow">
    <section class="contact-header">
      <h1 data-i18n="contact.title">Liên hệ</h1>
      <p class="intro" data-i18n="contact.intro">
        Mình luôn sẵn sàng trao đổi về công nghệ hoặc các cơ hội hợp tác.
      </p>
    </section>

    <div class="contact-content">
      <div class="contact-card">
        <h3 data-i18n="contact.email">Email</h3>
        <p data-i18n="contact.email.desc">Gửi mail cho mình tại:</p>
        <a href="mailto:haiphamcoder@gmail.com" class="contact-link"
          >haiphamcoder@gmail.com</a
        >
      </div>

      <div class="contact-card">
        <h3 data-i18n="contact.social">Mạng xã hội</h3>
        <p data-i18n="contact.social.desc">Kết nối với mình qua mạng xã hội:</p>
        <div class="social-links">
          <a
            href="https://github.com/haiphamcoder"
            target="_blank"
            aria-label="GitHub"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 4 3c-1.2 1.76-1.5 4.54-.5 5.5-.73 1.02-1.08 2.25-1 3.5.2 3.5 3 5.5 6 5.5-.9 1.2-1 2.5-1 4v4h4z"
              ></path></svg
            >
          </a>
          <a
            href="https://www.linkedin.com/in/haiphamcoder"
            target="_blank"
            aria-label="LinkedIn"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
              ></path><rect x="2" y="9" width="4" height="12"></rect><circle
                cx="4"
                cy="4"
                r="2"></circle></svg
            >
          </a>
          <a
            href="https://facebook.com/haiphamcoder"
            target="_blank"
            aria-label="Facebook"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
              ></path></svg
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .contact-header {
    margin: 4rem 0 3rem;
    text-align: center;
  }

  .intro {
    font-size: 1.25rem;
    color: var(--muted);
  }

  .contact-content {
    display: grid;
    gap: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-card {
    background: var(--card);
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    text-align: center;
    transition: var(--transition);
  }

  .contact-card:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--brand);
    transform: translateY(-2px);
  }

  .contact-link {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--brand);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .social-links a {
    color: var(--muted);
    font-weight: 500;
  }

  .social-links a:hover {
    color: var(--brand);
  }
</style>
